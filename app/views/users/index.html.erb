      <tbody>
    <% @users.each do |user| %>
      <tr class="active">
        <td><%= user.id %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user,class: 'btn btn-info', style: 'padding: 2px 10px;' %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: 'btn btn-primary', style: 'padding: 2px 10px;' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger', style: 'padding: 2px 10px;' %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
